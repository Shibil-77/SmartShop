<section class="shop section">
<div class="container">
<div class="row">
<div class="col-lg-3 mb-4">

<div class="account-sidebar">
<h6 class="sidebar-title">DASHBOARD</h6>
<div class="sidebar-list">
<a href="/orderlist" class="active"><i class="far fa-shopping-bag"></i> Orders</a>
<a href="/wishListPage"><i class="far fa-heart"></i> Wishlist</a>
</div>
<h6 class="sidebar-title mt-4">PROFILE SETTINGS</h6>
<div class="sidebar-list">
<a href="/Profile"><i class="far fa-user"></i> Profile Info</a>
<a href="/addresslist"><i class="far fa-map-marker-alt"></i> Addresses </a>
</div>
</div>

</div>
<div class="col-lg-9">
<div class="account-content bg-white pt-0">
<h4 class="account-content-title"><i class="far fa-map-marker-alt"></i> Add Address</h4>
<div class="edit-profile">
<form action="/editAddress/<%=addressData.id%>"  method="post"  >
<div class="row">
<div class="col-lg-6">
<div class="mb-3">
<label for="name" class="form-label">First Name</label>
<input type="text" name="firstName" class="form-control" id="name" value="<%-addressData.firstName%>">
</div>
</div>
<div class="col-lg-6">
<div class="mb-3">
<label for="name" class="form-label">Last Name</label>
<input type="text" name="lastName" class="form-control" id="name" value="<%-addressData.lastName%>">
</div>
</div>

<div class="col-lg-6">
<div class="mb-3">
<label  class="form-label">Email Address</label>
<input type="email" name="email"  value="<%-addressData.email%>" class="form-control" id="phone">
</div>
</div>
<div class="col-lg-6">
<div class="mb-3">
<label for="phone" class="form-label">Phone</label>
<input type="number" name="phoneNumber" value="<%-addressData.phoneNumber%>" class="form-control" id="phone">
</div>
</div>
<div class="col-lg-6">
<div class="mb-3">
<label  class="form-label" >Address Line 1</label>
<input type="text" class="form-control" value="<%-addressData.arrresLine%>" name="arrresLine" id="address">
</div>
</div>
<div class="col-lg-6">
<div class="mb-3">
<label  class="form-label">Address Line 2</label>
<input type="text" class="form-control" name="address" value="<%-addressData.address%>" id="address">
</div>
</div>


<div class="col-lg-6 col-md-6 col-12">
<div class="form-group">
<label>Country<span>*</span></label>
<select name="countryName"   id="country-2">
<option value="<%-addressData.countryName%>">India</option>
<option value="Afghanistan">Afghanistan</option>
<option value="Åland Islands">Åland Islands</option>
<option value="Albania">Albania</option>
<option value="Algeria">Algeria</option>
<option value="American Samoa">American Samoa</option>
<option value="Andorra">Andorra</option>
<option value="Angola">Angola</option>
<option value="Anguilla">Anguilla</option>
<option value="Cayman Islands">Cayman Islands</option>
<option value="Central African Republic">Central African Republic</option>
<option value="Chad">Chad</option>
<option value="Chile">Chile</option>
<option value="CR">Costa Rica</option>
</select>
</div>
</div>


<div class="col-lg-6 col-md-6 col-12">
<div class="form-group">
<label>State / Divition<span>*</span></label>
<select name="state" >
<option value="<%-addressData.state %>" selected="selected">Kerala</option>
<option>New Yourk<option>
<option>Chicago</option>
<option>Houston</option>
<option>San Diego</option>
<option>Dallas</option>
<option>Charlotte</option>
</select>
</div>
</div>

<div class="col-lg-6">
<div class="mb-3">
<label  class="form-label">Pin Code</label>
<input type="number" value="<%-addressData.postCode %>" name="postCode" class="form-control" id="address">
</div>
</div>
</div>
<button class="btn" type="submit">Save Address</button>
</form>
</div>
</div>
</div>
</div>
</div>
</section>

