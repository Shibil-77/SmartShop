<head>
    <%- include('../inclueds/head.ejs'); %>
<body>
    <%- include('../inclueds/navbar.ejs'); %>


<div class="breadcrumbs">
<div class="container">
<div class="row">
<div class="col-12">
<div class="bread-inner">
<ul class="bread-list">
<li><a href="/">Home<i class="ti-arrow-right"></i></a></li>
<li class="active"><a href="#">Add Address</a></li>
</ul>
</div>
</div>
