<!DOCTYPE html>
<html lang="en">
    <%- include('../inclueds/head.ejs'); %>
<body>

<div class="preloader">
<div class="preloader-inner">
<div class="preloader-icon">
<span></span>
<span></span>
</div>
</div>
</div>

<%- include('../inclueds/navbar.ejs'); %>

<section class="hero-slider bg-grey">
<div class="container">
<div class="main-hero-slider owl-carousel owl-theme">

    <% banner_Data.forEach(banner_Data=> { %>

<div class="item">
<div class="single-slider item">
<div class="row">
<div class="col-lg-7 col-md-8 my-auto">
<div class="text-inner">
<div class="hero-text">
<h1><span>UP TO <%-banner_Data.offer %> % OFF </span>For Your First Buy</h1>
<p><%-banner_Data.Heading %></p>
<div class="button">
<a href="#" class="btn">Shop Now!</a>
</div>
</div>
</div>
</div>
<div class="col-lg-5 col-md-4 my-auto">
<img src="/img/banner/<%-banner_Data.bannerimage %>" class="w-100" alt="">
</div>
</div>
</div>
</div>

<% }); %>

</div>
</div>
</section>
<div class="product-area section">
<div class="container">
<div class="row">
<div class="col-12">
<div class="section-title d-flex justify-content-between align-center">
<div class="d-flex section-title-left">
<i class="flaticon-tags"></i>
<h2>Trending Item</h2>
</div>
<div class="section-title-right">
<a href="#">View More <i class="far fa-long-arrow-right"></i></a>
</div>
</div>
</div>
</div>
<div class="product-slider owl-carousel owl-theme">

    
<!-- card -->
<% product.forEach(product => { %>
<div class="item">
<div class="single-product">
<div class="product-img">
<a href="/shopsingle/<%=product.id %>">
<img class="product-img" src="/img/product/<%-product.moreImage[0] %>" alt="#">
<span class="new">New</span>
</a>
<div class="button-head">
<div class="product-action">
<a data-bs-toggle="modal" data-bs-target="#staticBackdrop" href="/shopsingle/<%=product.id %>"><a href="/shopsingle/<%=product.id %>"><i class="far fa-eye"></i></a><span>Quick Shop</span></a>
<a  onclick="wishList('<%=product.id %>')"><i class="far fa-heart"></i><span>Add to Wishlist</span></a>
</div>
</div>
</div>
<div class="product-content">
<h3><a href="/shopsingle/<%=product.id %>"><%-product.Name %></a></h3>
<div class="d-flex justify-content-between">
<div class="product-price">
<span class="old">$<%-product.Discount%></span>
<span>$<%-product.Price %></span>
</div>
<button class="product-cart-btn"  type="button"><a onclick="addToCart('<%=product.id %>')"><i class="fal fa-shopping-cart"></i></a></button>
</div>
</div>
</div>
</div>
<% }); %>
</div>
</div>
</div>


<%- include('../inclueds/footer.ejs'); %>

<%- include('../inclueds/end.ejs'); %>


</body>
</html>