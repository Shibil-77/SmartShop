<script>
    $("#couponSubmission").submit((e) => {
    e.preventDefault()
    $.ajax({
            url: '/admin/addcoupon',
            method: 'post',
            data: $("#couponSubmission").serialize(),
            success: (response) => {
                if(response.status){
                    location.href = '/admin/coupon'
                }
            }
    })
})
